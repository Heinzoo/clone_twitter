<div class="toast align-items-center text-bg-success" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <%= notice %>
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

<form class="d-flex py-2" role="search">
  <div class="input-group me-3">
    <input class="form-control rounded-start-pill" type="search" placeholder="Buscar Tweet" aria-label="Search" aria-describedby="basic-addon1">
    <span class="input-group-text rounded-end-pill" id="basic-addon1"><i class="bi bi-search"></i></span>
  </div>
  <%= link_to "Twittear", new_tweet_path, class: "btn btn-info rounded-pill fw-semibold text-white" %>
</form>  

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
  <% end %>
</div>
